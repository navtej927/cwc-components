{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/build",
    "**/node_modules",
    "**/dist",
    "**/.*/"
  ]
}